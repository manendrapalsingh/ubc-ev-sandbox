					"// Generate a new transaction_id for discover request",
					"// This transaction_id will be used for all subsequent requests in the same transaction flow",
					"function generateUUID() {",
					"    return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function(c) {",
					"        const r = Math.random() * 16 | 0;",
					"        const v = c === 'x' ? r : (r & 0x3 | 0x8);",
					"        return v.toString(16);",
					"    });",
					"}",
					"const transactionId = generateUUID();",
					"pm.environment.set('transaction_id', transactionId);",
					"console.log('Generated new transaction_id: ' + transactionId);"
