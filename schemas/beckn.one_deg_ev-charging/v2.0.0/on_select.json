{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "on_select",
  "type": "object",
  "properties": {
    "context": {
      "type": "object",
      "properties": {
        "domain": {
          "type": "string",
          "description": "Identifier of the domain",
          "pattern": "^(dent:ev-charging:|ev_charging_network|beckn.one:deg:ev-charging)"
        },
        "action": {
          "type": "string",
          "enum": ["on_select"],
          "description": "API endpoint callback"
        },
        "location": {
          "type": "object",
          "properties": {
            "country": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string",
                  "description": "Country code"
                }
              },
              "required": ["code"]
            },
            "city": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string",
                  "description": "City code"
                }
              },
              "required": ["code"]
            }
          },
          "required": ["country", "city"]
        },
        "version": {
          "type": "string",
          "description": "Version of the Beckn protocol"
        },
        "bap_id": {
          "type": "string",
          "description": "Identification of the BAP"
        },
        "bap_uri": {
          "type": "string",
          "format": "uri",
          "description": "BAP endpoint"
        },
        "bpp_id": {
          "type": "string",
          "description": "Identification of the BPP"
        },
        "bpp_uri": {
          "type": "string",
          "format": "uri",
          "description": "BPP endpoint"
        },
        "transaction_id": {
          "type": "string",
          "format": "uuid",
          "description": "Transaction identifier"
        },
        "message_id": {
          "type": "string",
          "format": "uuid",
          "description": "Message identifier"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Time at which the response was generated"
        },
        "ttl": {
          "type": "string",
          "description": "Time to live (ISO 8601 duration format)"
        },
        "schema_context": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "Schema context URLs"
        }
      },
      "required": ["domain", "action", "location", "version", "bap_id", "bap_uri", "bpp_id", "bpp_uri", "transaction_id", "message_id", "timestamp"]
    },
    "message": {
      "type": "object",
      "properties": {
        "order": {
          "type": "object",
          "properties": {
            "@context": {
              "type": "string",
              "format": "uri",
              "description": "JSON-LD context"
            },
            "@type": {
              "type": "string",
              "enum": ["beckn:Order"],
              "description": "Order type"
            },
            "beckn:id": {
              "type": "string",
              "description": "Order identifier"
            },
            "beckn:orderStatus": {
              "type": "string",
              "description": "Order status"
            },
            "beckn:orderNumber": {
              "type": "string",
              "description": "Order number"
            },
            "beckn:seller": {
              "type": "string",
              "description": "Seller identifier"
            },
            "beckn:buyer": {
              "type": ["string", "object"],
              "description": "Buyer identifier or object"
            },
            "beckn:orderItems": {
              "type": "array",
              "items": {
                "type": "object"
              },
              "minItems": 1
            },
            "beckn:orderValue": {
              "type": "object",
              "properties": {
                "currency": {
                  "type": "string"
                },
                "value": {
                  "type": "number"
                },
                "components": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              },
              "required": ["currency", "value"]
            },
            "beckn:fulfillment": {
              "type": "object",
              "properties": {
                "@context": {
                  "type": "string",
                  "format": "uri"
                },
                "@type": {
                  "type": "string",
                  "enum": ["beckn:Fulfillment"]
                },
                "beckn:id": {
                  "type": "string"
                },
                "beckn:mode": {
                  "type": "string"
                },
                "beckn:status": {
                  "type": "string"
                },
                "beckn:deliveryAttributes": {
                  "type": "object"
                }
              }
            },
            "beckn:payment": {
              "type": "object",
              "properties": {
                "@context": {
                  "type": "string",
                  "format": "uri"
                },
                "@type": {
                  "type": "string",
                  "enum": ["beckn:Payment"]
                },
                "beckn:id": {
                  "type": "string"
                },
                "beckn:status": {
                  "type": "string"
                },
                "beckn:amount": {
                  "type": "object",
                  "properties": {
                    "currency": {
                      "type": "string"
                    },
                    "value": {
                      "type": "number"
                    }
                  },
                  "required": ["currency", "value"]
                },
                "beckn:paymentURL": {
                  "type": "string",
                  "format": "uri"
                },
                "beckn:txnRef": {
                  "type": "string"
                },
                "beckn:acceptedPaymentMethods": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "beckn:beneficiary": {
                  "type": "string"
                }
              }
            },
            "beckn:orderAttributes": {
              "type": "object"
            },
            "provider": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "descriptor": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "short_desc": {
                      "type": "string"
                    },
                    "images": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "url": {
                            "type": "string",
                            "format": "uri"
                          }
                        }
                      }
                    }
                  }
                }
              },
              "required": ["id"]
            },
            "items": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "descriptor": {
                    "type": "object",
                    "properties": {
                      "code": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      }
                    }
                  },
                  "price": {
                    "type": "object",
                    "properties": {
                      "value": {
                        "type": "string"
                      },
                      "currency": {
                        "type": "string"
                      }
                    },
                    "required": ["value", "currency"]
                  },
                  "quantity": {
                    "type": "object",
                    "properties": {
                      "available": {
                        "type": "object",
                        "properties": {
                          "measure": {
                            "type": "object",
                            "properties": {
                              "value": {
                                "type": "string"
                              },
                              "unit": {
                                "type": "string"
                              }
                            }
                          }
                        }
                      },
                      "selected": {
                        "type": "object",
                        "properties": {
                          "measure": {
                            "type": "object",
                            "properties": {
                              "value": {
                                "type": "string"
                              },
                              "unit": {
                                "type": "string"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "required": ["id"]
              }
            },
            "fulfillments": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string",
                    "enum": ["CHARGING", "BATTERY-SWAP", "MOBILE-BATTERY-SWAP"]
                  },
                  "stops": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "enum": ["start", "end"]
                        },
                        "time": {
                          "type": "object",
                          "properties": {
                            "timestamp": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "descriptor": {
                          "type": "object",
                          "properties": {
                            "name": {
                              "type": "string"
                            }
                          }
                        },
                        "list": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "descriptor": {
                                "type": "object",
                                "properties": {
                                  "name": {
                                    "type": "string"
                                  },
                                  "code": {
                                    "type": "string"
                                  }
                                }
                              },
                              "value": {
                                "type": "string"
                              }
                            }
                          }
                        },
                        "display": {
                          "type": "boolean"
                        }
                      }
                    }
                  }
                },
                "required": ["id", "type"]
              }
            },
            "quote": {
              "type": "object",
              "properties": {
                "price": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "string",
                      "description": "Total quote price"
                    },
                    "currency": {
                      "type": "string",
                      "description": "Currency code"
                    }
                  },
                  "required": ["value", "currency"]
                },
                "breakup": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "item": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "descriptor": {
                            "type": "object",
                            "properties": {
                              "name": {
                                "type": "string"
                              }
                            }
                          },
                          "quantity": {
                            "type": "object",
                            "properties": {
                              "selected": {
                                "type": "object",
                                "properties": {
                                  "measure": {
                                    "type": "object",
                                    "properties": {
                                      "value": {
                                        "type": "string"
                                      },
                                      "unit": {
                                        "type": "string"
                                      }
                                    }
                                  }
                                }
                              }
                            }
                          },
                          "add_ons": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "id": {
                                  "type": "string"
                                }
                              }
                            }
                          }
                        }
                      },
                      "price": {
                        "type": "object",
                        "properties": {
                          "value": {
                            "type": "string"
                          },
                          "currency": {
                            "type": "string"
                          }
                        },
                        "required": ["value", "currency"]
                      }
                    },
                    "required": ["price"]
                  }
                }
              },
              "required": ["price", "breakup"]
            }
          },
          "required": []
        }
      },
      "required": ["order"]
    }
  },
  "error": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string"
      },
      "code": {
        "type": "string"
      },
      "path": {
        "type": "string"
      },
      "message": {
        "type": "string"
      }
    }
  },
  "required": ["context", "message"],
  "additionalProperties": false
}

