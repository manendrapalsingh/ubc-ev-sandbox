{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "on_discover",
  "type": "object",
  "properties": {
    "context": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "description": "Version of the Beckn protocol"
        },
        "action": {
          "type": "string",
          "enum": [
            "on_discover"
          ],
          "description": "API endpoint callback"
        },
        "domain": {
          "type": "string",
          "description": "Identifier of the domain",
          "pattern": "^(dent:ev-charging:|ev_charging_network|beckn.one:deg:ev-charging)"
        },
        "location": {
          "type": "object",
          "properties": {
            "country": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string",
                  "description": "Country code as per ISO 3166-1 alpha-3 standard"
                }
              },
              "required": [
                "code"
              ]
            },
            "city": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "string",
                  "description": "City code"
                }
              },
              "required": [
                "code"
              ]
            }
          },
          "required": [
            "country",
            "city"
          ]
        },
        "bap_id": {
          "type": "string",
          "description": "Identification of the BAP"
        },
        "bap_uri": {
          "type": "string",
          "format": "uri",
          "description": "BAP endpoint"
        },
        "bpp_id": {
          "type": "string",
          "description": "Identification of the BPP"
        },
        "bpp_uri": {
          "type": "string",
          "format": "uri",
          "description": "BPP endpoint"
        },
        "transaction_id": {
          "type": "string",
          "description": "Transaction identifier"
        },
        "message_id": {
          "type": "string",
          "description": "Message identifier"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Time at which the response was generated"
        },
        "ttl": {
          "type": "string",
          "description": "Time to live (ISO 8601 duration format)"
        },
        "schema_context": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "description": "Schema context URLs"
        }
      },
      "required": [
        "version",
        "action",
        "domain",
        "bap_id",
        "bap_uri",
        "bpp_id",
        "bpp_uri",
        "transaction_id",
        "message_id",
        "timestamp"
      ]
    },
    "message": {
      "type": "object",
      "properties": {
        "catalogs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "@context": {
                "type": "string",
                "format": "uri"
              },
              "@type": {
                "type": "string",
                "enum": [
                  "beckn:Catalog"
                ]
              },
              "beckn:id": {
                "type": "string"
              },
              "beckn:descriptor": {
                "type": "object",
                "properties": {
                  "@type": {
                    "type": "string"
                  },
                  "schema:name": {
                    "type": "string"
                  },
                  "beckn:shortDesc": {
                    "type": "string"
                  },
                  "beckn:longDesc": {
                    "type": "string"
                  },
                  "images": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "url": {
                          "type": "string",
                          "format": "uri"
                        }
                      }
                    }
                  }
                }
              },
              "beckn:validity": {
                "type": "object",
                "properties": {
                  "@type": {
                    "type": "string"
                  },
                  "schema:startDate": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "schema:endDate": {
                    "type": "string",
                    "format": "date-time"
                  }
                }
              },
              "beckn:items": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "properties": {
                    "@context": {
                      "type": "string",
                      "format": "uri"
                    },
                    "@type": {
                      "type": "string",
                      "enum": [
                        "beckn:Item"
                      ]
                    },
                    "beckn:id": {
                      "type": "string"
                    },
                    "beckn:descriptor": {
                      "type": "object",
                      "properties": {
                        "@type": {
                          "type": "string"
                        },
                        "schema:name": {
                          "type": "string"
                        },
                        "beckn:shortDesc": {
                          "type": "string"
                        },
                        "beckn:longDesc": {
                          "type": "string"
                        },
                        "images": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "url": {
                                "type": "string",
                                "format": "uri"
                              }
                            }
                          }
                        }
                      }
                    },
                    "beckn:category": {
                      "type": "object",
                      "properties": {
                        "@type": {
                          "type": "string"
                        },
                        "schema:codeValue": {
                          "type": "string"
                        },
                        "schema:name": {
                          "type": "string"
                        }
                      }
                    },
                    "beckn:availableAt": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "@type": {
                            "type": "string"
                          },
                          "geo": {
                            "type": "object",
                            "properties": {
                              "type": {
                                "type": "string",
                                "enum": [
                                  "Point"
                                ]
                              },
                              "coordinates": {
                                "type": "array",
                                "items": {
                                  "type": "number"
                                },
                                "minItems": 2,
                                "maxItems": 2
                              }
                            }
                          },
                          "address": {
                            "type": "object",
                            "properties": {
                              "streetAddress": {
                                "type": "string"
                              },
                              "addressLocality": {
                                "type": "string"
                              },
                              "addressRegion": {
                                "type": "string"
                              },
                              "postalCode": {
                                "type": "string"
                              },
                              "addressCountry": {
                                "type": "string"
                              }
                            }
                          }
                        }
                      }
                    },
                    "beckn:availabilityWindow": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "@type": {
                            "type": "string"
                          },
                          "schema:startTime": {
                            "type": "string"
                          },
                          "schema:endTime": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "beckn:rateable": {
                      "type": "boolean"
                    },
                    "beckn:rating": {
                      "type": "object",
                      "properties": {
                        "@type": {
                          "type": "string"
                        },
                        "beckn:ratingValue": {
                          "type": "number"
                        },
                        "beckn:ratingCount": {
                          "type": "number"
                        }
                      }
                    },
                    "beckn:isActive": {
                      "type": "boolean"
                    },
                    "beckn:networkId": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "beckn:provider": {
                      "type": "object",
                      "properties": {
                        "beckn:id": {
                          "type": "string"
                        },
                        "beckn:descriptor": {
                          "type": "object",
                          "properties": {
                            "@type": {
                              "type": "string"
                            },
                            "schema:name": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    },
                    "beckn:itemAttributes": {
                      "type": "object",
                      "description": "EV Charging Service specific attributes"
                    }
                  },
                  "required": [
                    "@type",
                    "beckn:id"
                  ]
                }
              },
              "beckn:offers": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "@context": {
                      "type": "string",
                      "format": "uri"
                    },
                    "@type": {
                      "type": "string",
                      "enum": [
                        "beckn:Offer"
                      ]
                    },
                    "beckn:id": {
                      "type": "string"
                    },
                    "beckn:descriptor": {
                      "type": "object",
                      "properties": {
                        "@type": {
                          "type": "string"
                        },
                        "schema:name": {
                          "type": "string"
                        }
                      }
                    },
                    "beckn:items": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "beckn:price": {
                      "type": "object",
                      "properties": {
                        "currency": {
                          "type": "string"
                        },
                        "value": {
                          "oneOf": [
                            {
                              "type": "string"
                            },
                            {
                              "type": "number"
                            }
                          ]
                        },
                        "applicableQuantity": {
                          "type": "object",
                          "properties": {
                            "unitText": {
                              "type": "string"
                            },
                            "unitCode": {
                              "type": "string"
                            },
                            "unitQuantity": {
                              "type": "number"
                            }
                          }
                        }
                      },
                      "required": [
                        "currency",
                        "value"
                      ]
                    },
                    "beckn:validity": {
                      "type": "object",
                      "properties": {
                        "@type": {
                          "type": "string"
                        },
                        "schema:startDate": {
                          "type": "string",
                          "format": "date-time"
                        },
                        "schema:endDate": {
                          "type": "string",
                          "format": "date-time"
                        }
                      }
                    },
                    "beckn:acceptedPaymentMethod": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "beckn:offerAttributes": {
                      "type": "object"
                    },
                    "beckn:provider": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "@type",
                    "beckn:id"
                  ]
                }
              },
              "beckn:providers": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "@context": {
                      "type": "string",
                      "format": "uri"
                    },
                    "@type": {
                      "type": "string",
                      "enum": [
                        "beckn:Provider"
                      ]
                    },
                    "beckn:id": {
                      "type": "string"
                    },
                    "beckn:descriptor": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "code": {
                          "type": "string"
                        },
                        "short_desc": {
                          "type": "string"
                        },
                        "images": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "url": {
                                "type": "string",
                                "format": "uri"
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  "required": [
                    "@type",
                    "beckn:id"
                  ]
                }
              }
            },
            "required": [
              "@type",
              "beckn:id",
              "beckn:items"
            ]
          }
        }
      },
      "required": [
        "catalogs"
      ]
    },
    "error": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "code": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  },
  "required": [
    "context",
    "message"
  ],
  "additionalProperties": false,
  "examples": [
    {
      "summary": "On discover response catalog",
      "externalValue": "../../../tmp/v2/02_on_discover/time-based-ev-charging-slot-catalog.json"
    }
  ]
}
